<%- include('../partials/header.ejs') %>

<body>
  <%- include('../partials/navbar.ejs') %>

  <div class="container">

    <br>

    <%if(message != null) {%>

    <div class="alert alert-warning alert-dismissible fade show" role="alert">
      <strong><%=message%>!</strong> Tente de novo.
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

    <%}%>

    <%if(message1 != null) {%>

    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <strong>Registo concluído!</strong> Efetua o login.
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

    <%}%>

    <div class="card mt-5" style="margin-top: 1rem !important">
      <div class="card-header">
        <b>Entrar na conta</b>
      </div>
      <div class="card-body">
        <form action="/users/login" method="POST">
          <span>Email</span>
          <input class="form-control" name="email" type="email" placeholder="email@exemplo.com" required><br>

          <span>Password</span>
          <input class="form-control" name="password" type="password" placeholder="******" required><br>
          <button type="submit" class="btn btn-dark btn-block">Submeter</button><br>
          <br>
          <p id="sign_up">Ainda não tem conta? <a href="/users/register">Registo de novo utilizador</a><br></p>
        </form>
      </div>
    </div>
  </div>

</body>

<%- include('../partials/bootstrapScripts.ejs') %>

    </html>